  {
    "compilerOptions": {
      "module": "es6",
      "lib": ["es6"],
      "target": "es2015",
      "moduleResolution": "Node",
      "outDir": "build/step2-rollup/",
      "rootDir": "src",
      "baseUrl": "src",
      "sourceMap": false,
      "strict": true,
      "allowJs": true,
      "checkJs": true,
      "removeComments": true,
      "experimentalDecorators": true,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": false,
      "paths": {
