{
  "compilerOptions": {
    "module": "es6",
    "lib": [
      "es6"
    ],
    "target": "es2015",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    // "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types",
      "./node_modules/@types/screeps/dist"
    ],
    "paths": {
      "*": [
        "*",
        "shared/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
